{
  "image": "gwisp2/hass-docker-cards-devcontainer:latest",
  "postCreateCommand": "sudo /usr/bin/supervisord && sudo -E hactl setup-start",
  "forwardPorts": [8123],
  "mounts": [
    "source=${localWorkspaceFolder},target=/config/www/workspace,type=bind",
    "source=${localWorkspaceFolder}/test/configuration.yaml,target=/config/configuration.yaml,type=bind"
  ],
  "runArgs": ["--env-file", "${localWorkspaceFolder}/test/.env"],
  "customizations": {
    "vscode": {
      "extensions": ["eamodio.gitlens", "bierner.lit-html", "christian-kohler.npm-intellisense"]
    }
  }
}
