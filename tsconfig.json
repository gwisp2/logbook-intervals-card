// For scripts
// We have to name this file 'tsconfig.json' to use ts-node shebang in scripts
{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["scripts"]
}